<p id="notice"><%= notice %></p>

<h1>Sub Areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Incharge</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_areas.each do |sub_area| %>
      <tr>
        <td><%= sub_area.name %></td>
        <td><%= sub_area.incharge %></td>
        <td><%= sub_area.area %></td>
        <td><%= link_to 'Show', sub_area %></td>
        <td><%= link_to 'Edit', edit_sub_area_path(sub_area) %></td>
        <td><%= link_to 'Destroy', sub_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

